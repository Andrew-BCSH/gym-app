<div class="max-w-md mx-auto mt-8 bg-white p-8 rounded-lg shadow-md">
  <div class="flex items-center gap-4">
    <%= image_tag users_generate_qr_code_path(data: @qr_code_data), class: "w-40 h-40 rounded-lg object-cover" %>

    <div>
      <h3 class="text-lg/tight font-medium text-gray-900">User Information</h3>

      <p class="mt-0.5 text-gray-700">
        User ID: <%= current_user.id %>
      </p>

      <p class="mt-0.5 text-gray-700">
        Your balance is: <%= current_user.credit.balance %>
      </p>
    </div>
  </div>
</div>
