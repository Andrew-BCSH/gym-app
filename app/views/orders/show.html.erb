<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.membership.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Membership ID: #<%= @order.id %> <small><span class="badge badge-primary"></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>Membership</strong> <%= @order.membership.name %> [<%= @order.membership_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <strong>Order Completed</strong>
    </div>
  </div>
</div>
