<div class="max-w-screen-md mx-auto">
  <section class="mx-auto rounded-lg border px-4 py-4 sm:px-6 lg:px-8 bg-red-700">
    <div class="shadow-lg bg-white p-6 rounded-lg">
      <div class="flex flex-col rounded-lg border border-red-900 px-4 py-2 text-center mb-8">
        <h1 class="text-2xl text-center py-2 font-bold text-gray-900 sm:text-3xl">Edit Profile</h1>
        <p class="text-gray-500 sm:text-xl">Update your account details</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <i class="text-xs">(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <% if @minimum_password_length %>
            <br />
            <em class="text-xs"><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

          <div class="field mb-4">
           <%= f.label :photo, class: "block text-sm font-medium text-gray-700" %>
              <%= f.file_field :photo, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="field mb-4">
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
          <i class="text-xs">(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>

      <h3 class="text-lg font-medium text-gray-900 mt-8">Cancel my account</h3>
      <p class="mt-1 text-sm text-gray-600">Unhappy? You can delete your account below.</p>

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mt-4 w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>

      <%= link_to "Back", :back, class: "block mt-4 text-sm font-medium text-red-600 hover:text-red-500" %>
    </div>
  </section>
</div>
