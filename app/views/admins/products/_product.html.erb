<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>In stock:</strong>
    <%= product.in_stock %>
  </p>

  <p>
    <strong>Price currency:</strong>
    <%= product.price_currency %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category %>
  </p>

</div>
