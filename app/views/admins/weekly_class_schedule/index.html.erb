<h1>Admin Class Schedule</h1>

<% if @admin.weekly_class_schedule.attached? %>
# app/views/admins/weekly_class_schedule/index.html.erb
<h1 class="text-2xl py-5 font-bold text-gray-900 sm:text-3xl">Upload a New Class Schedule</h1>

<%= form_for @admins_weekly_class_schedule, url: admins_weekly_class_schedule_index_path, html: { multipart: true } do |f| %>
  <% if @admins_weekly_class_schedule.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admins_weekly_class_schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% @admins_weekly_class_schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :weekly_class_schedule, class: 'block text-xs font-medium text-gray-700' %>
    <%= f.file_field :weekly_class_schedule, id: 'WeeklyClassSchedule', class: 'mt-1 rounded-md border-gray-200 shadow-sm sm:text-sm' %>
  </div>

  <div class="mb-4">
    <%= f.submit 'Upload Schedule', class: 'block bg-red-700 text-white rounded-md px-4 py-2.5 text-sm font-medium transition hover:bg-red-800' %>
  </div>
<% end %>

<div class="mb-4">
  <%= link_to 'Class Schedule', admins_weekly_class_schedule_index_path, class: 'block bg-red-700 text-white rounded-md px-4 py-2.5 text-sm font-medium transition hover:bg-red-800' %>
</div>

<h2>Current Weekly Class Schedule</h2>
<% if @admins_weekly_class_schedule.persisted? %>
  <%= link_to 'Download Schedule', url_for(@admins_weekly_class_schedule.weekly_class_schedule) %>
<% else %>
  <p>No schedule uploaded.</p>
<% end %>

