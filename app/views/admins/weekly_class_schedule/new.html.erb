<div class="shadow-lg bg-white p-6 rounded-lg">
  <div class="flex flex-col rounded-lg border border-red-900 px-4 py-2 text-center mb-8">
    <h1 class="text-2xl text-center py-2 font-bold text-gray-900 sm:text-3xl">Upload a New Class Schedule</h1>
  </div>

  <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-lg">
    <p class="mx-auto mt-4 max-w-md text-center text-gray-500">
      Upload a Class Schedule
    </p>

    <%= form_for @admin, url: admins_weekly_class_schedule_index_path, html: { multipart: true } do |f| %>
      <% if @admin.errors.any? %>
        <div class="text-red-500 mb-4">
          <h2 class="font-bold mb-2"><%= pluralize(@admin.errors.count, "error") %> prohibited this schedule from being saved:</h2>

          <ul>
            <% @admin.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :weekly_class_schedule, class: 'block text-xs font-medium text-gray-700' %>
        <%= f.file_field :weekly_class_schedule, id: 'WeeklyClassSchedule', class: 'mt-1 block w-full rounded-md border-bg-red-700 shadow-sm sm:text-sm' %>
      </div>

      <div class="mb-4">
        <%= f.submit 'Upload Schedule', class: 'inline-block w-full px-2 py-2 text-sm font-medium text-white bg-red-700 rounded-md shadow-md hover:bg-red-800 focus:outline-none focus:bg-red-800' %>
      </div>
    <% end %>

   <div class="mb-4 text-center">
  <%= link_to 'Class Schedule', admins_weekly_class_schedule_index_path, class: 'inline-block w-full px-4 py-2 text-sm font-medium text-white bg-red-700 rounded-md shadow-md hover:bg-red-800 focus:outline-none focus:bg-red-800' %>
</div>
  </div>
</div>
