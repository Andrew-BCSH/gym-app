<div class="container">
  <h1>Memberships</h1>
  <div class="row">
    <% @memberships.each do |membership| %>
      <div class="col-6 col-md-4">
        <div class="card">
          <%= image_tag membership.photo_url , class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= membership.name %></h5>
            <p class="card-text"><%= membership.category.name %></p>
            <p>Amount: <%= humanized_money_with_symbol(membership.price) %></p>
            <%= link_to "More details", membership_path(membership), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
