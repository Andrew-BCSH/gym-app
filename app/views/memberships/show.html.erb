<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@membership.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @membership.name %></h1>
      <p>Some description of our memberships.</p>
      <p>Amount: <%= humanized_money_with_symbol(@membership.price) %></p>
      <a href="/membership/<%= @membership.id %>/checkout" data-turbo="false">purchase</a>

    </div>
  </div>
</div>
